<resources>

    <!-- profile detail -->
    <array name="profile_action_names">
        <item>@string/actions_alarm_title</item>
        <item>@string/actions_notification_title</item>
    </array>

    <!-- alarm activity -->
    <array name="alarm_drawables">
        <item>@drawable/ic_glowpad_call</item>
        <item>@drawable/ic_glowpad_message</item>
        <item>@drawable/ic_glowpad_close</item>
        <item>@null</item>
    </array>
    <array name="alarm_descriptions">
        <item>Call</item>
        <item>Reply</item>
        <item>Dismiss</item>
        <item>@null</item>
    </array>
    <array name="alarm_direction_descriptions">
        <item>right</item>
        <item>top</item>
        <item>left</item>
        <item>@null</item>
    </array>

    <!-- alarm preferences -->
    <string-array name="alarm_timeout_names">
        <item>5 minutes</item>
        <item>10 minutes</item>
        <item>15 minutes</item>
        <item>20 minutes</item>
        <item>25 minutes</item>
        <item>30 minutes</item>
        <item>Never</item>
    </string-array>
    <string-array name="alarm_timeout_values">
        <item>5</item>
        <item>10</item>
        <item>15</item>
        <item>20</item>
        <item>25</item>
        <item>30</item>
        <item>-1</item>
    </string-array>

    <!-- advanced preferences -->
    <string-array name="call_log_delay_names">
        <item>1 second</item>
        <item>2 seconds</item>
        <item>3 seconds</item>
        <item>4 seconds</item>
        <item>5 seconds</item>
        <item>6 seconds</item>
    </string-array>
    <string-array name="call_log_delay_values">
        <item>1000</item>
        <item>2000</item>
        <item>3000</item>
        <item>4000</item>
        <item>5000</item>
        <item>6000</item>
    </string-array>
</resources>