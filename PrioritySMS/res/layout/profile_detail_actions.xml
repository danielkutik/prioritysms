<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detail_background">

    <LinearLayout
        style="@style/ProfileDetailCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/profile_detail_card_margin"
        android:orientation="vertical">

        <TextView
            style="@style/ProfileDetailHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/actions_alarm_title" />

        <View
            style="@style/ProfileDetailHeaderDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_detail_header_divider_height" />

        <Button
            android:id="@+id/action_sound"
            style="@style/ProfileDetailActionsItem.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            style="@style/ProfileDetailFooterDivider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_detail_header_divider_height" />

        <CheckBox
            android:id="@+id/action_vibrate"
            style="@style/ProfileDetailActionsItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/actions_vibrate" />
    </LinearLayout>

</ScrollView>