<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_holo_light"
    android:orientation="horizontal"
    android:padding="8dip">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/profile_detail_avatar_size"
        android:layout_height="@dimen/profile_detail_avatar_size"
        android:layout_marginEnd="8dip"
        android:contentDescription="@string/conditions_contact_avatar" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:fontFamily="sans-serif-light"
        android:textIsSelectable="false"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/delete"
        style="@style/ClearImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/conditions_contact_delete"
        android:padding="8dip"
        android:src="@drawable/ic_btn_delete" />

</LinearLayout>