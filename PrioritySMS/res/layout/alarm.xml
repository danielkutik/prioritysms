<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="140dip"
        android:layout_height="140dip"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dip"
        android:layout_marginTop="16dip"/>

    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        style="@style/AlarmContactName" />

    <net.sebastianopoggi.ui.GlowPadBackport.GlowPadView
        android:id="@+id/glow_pad_view"
        style="@style/AlarmGlowPad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-96dip" />

    <ScrollView
        android:id="@+id/message_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/glow_pad_view"
        android:layout_below="@id/contact_name"
        android:layout_marginBottom="-128dip"
        android:fadeScrollbars="false">

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AlarmMessage" />
    </ScrollView>

</RelativeLayout>