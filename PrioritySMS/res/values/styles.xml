<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="RedTheme"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="switchStyle">@style/SwitchAppTheme</item>
        <item name="switchStyleAb">@style/SwitchAbAppTheme</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:layout_height">60dip</item>
        <item name="android:background">@drawable/tab_indicator_ab_red</item>
    </style>

    <style name="SwitchAppTheme" parent="Widget.Holo.Light.CompoundButton.Switch">
        <item name="track">@drawable/switch_track_holo_light</item>
        <item name="thumb">@drawable/switch_inner_holo_light</item>
        <item name="switchTextAppearance">@style/SwitchTextAppearance</item>
    </style>

    <style name="SwitchAbAppTheme" parent="Widget.Holo.CompoundButton.Switch">
        <item name="track">@drawable/switch_track_holo_dark</item>
        <item name="thumb">@drawable/switch_inner_holo_dark</item>
        <item name="switchTextAppearance">@style/SwitchTextAppearance</item>
    </style>

    <style name="SwitchTextAppearance" parent="android:TextAppearance.Small.Inverse">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <!-- general -->
    <style name="ClearButton">
        <item name="android:background">@drawable/list_selector_holo_light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ClearImageButton">
        <item name="android:background">@drawable/list_selector_holo_light</item>
    </style>

    <!-- profile detail -->
    <style name="ProfileDetailNameBar">
        <item name="android:background">#FF2D2D2D</item>
        <item name="android:padding">4dip</item>
    </style>

    <style name="ProfileDetailHeader">
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileDetailHeaderDivider">
        <item name="android:background">@color/dark_red</item>
    </style>

</resources>