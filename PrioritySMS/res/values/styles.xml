<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppBaseTheme" parent="RedTheme"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
        <item name="switchStyle">@style/SwitchAppTheme</item>
        <item name="switchStyleAb">@style/SwitchAbAppTheme</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:layout_height">60dip</item>
        <item name="android:background">@drawable/tab_indicator_ab_red</item>
        <item name="android:shadowColor">#88000000</item>
        <item name="android:shadowRadius">0.1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
    </style>

    <style name="SwitchAppTheme" parent="Widget.Holo.Light.CompoundButton.Switch">
        <item name="track">@drawable/switch_track_holo_light</item>
        <item name="thumb">@drawable/switch_inner_holo_light</item>
        <item name="switchTextAppearance">@style/SwitchTextAppearance</item>
    </style>

    <style name="SwitchAbAppTheme" parent="Widget.Holo.CompoundButton.Switch">
        <item name="track">@drawable/switch_track_holo_dark</item>
        <item name="thumb">@drawable/switch_inner_holo_dark</item>
        <item name="switchTextAppearance">@style/SwitchTextAppearance</item>
    </style>

    <style name="SwitchTextAppearance" parent="android:TextAppearance.Small.Inverse">
        <item name="android:textColor">#FFFFFFFF</item>
    </style>

    <!-- general -->
    <style name="ClearButton">
        <item name="android:background">@drawable/list_selector_holo_light</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ClearImageButton">
        <item name="android:background">@drawable/list_selector_holo_light</item>
    </style>

    <!-- profile detail -->
    <style name="ProfileDetailNameBar">
        <item name="android:background">#FF2D2D2D</item>
        <item name="android:padding">4dip</item>
    </style>

    <style name="ProfileDetailCard">
        <item name="android:layout_marginLeft">@dimen/profile_detail_card_margin</item>
        <item name="android:layout_marginRight">@dimen/profile_detail_card_margin</item>
        <item name="android:layout_marginTop">@dimen/profile_detail_card_margin</item>
        <item name="android:background">@color/detail_card_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/profile_detail_padding</item>
    </style>

    <style name="ProfileDetailHeader">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps" tools:ignore="NewApi">true</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProfileDetailHeaderDivider">
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:background">@color/dark_red</item>
    </style>

    <style name="ProfileDetailFooterDivider">
        <item name="android:background">#22000000</item>
    </style>

    <style name="ProfileDetailFooterButton" parent="ClearButton">
        <item name="android:textColor">#FF888888</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingLeft">8dip</item>
    </style>

    <style name="ProfileDetailActionsItem">
        <!-- copied below to ProfileDetailActionsItem.Button" -->
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">8dip</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProfileDetailActionsItem.Button" parent="ClearButton">
        <!-- copied from ProfileDetailActionsItem -->
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">8dip</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>